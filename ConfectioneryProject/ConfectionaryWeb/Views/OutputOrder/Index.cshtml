@model IEnumerable<ConfectioneryShopModelServiceDAL.ViewModel.OrderViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CustomerID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustomerFIO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OutputID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OutputName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Count)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Sum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateImplement)
        </th>
        <th></th>
    </tr>

    @foreach ( var item in Model ) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerFIO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OutputID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OutputName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Count)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateImplement)
            </td>
            <td>
                @Html.ActionLink("Отдать на выполнение", "SetStatus", new {id = item.ID, status = "Processing"}) |
                @Html.ActionLink("Заказ готов", "SetStatus", new {id = item.ID, status = "Ready"}) |
                @Html.ActionLink("Заказ оплачен", "SetStatus", new {id = item.ID, status = "Paid"})
            </td>
        </tr>
    }

</table>